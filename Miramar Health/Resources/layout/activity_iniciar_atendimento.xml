<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_300">


    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="65.0dp"
        android:background="#fff26d18"
        android:gravity = "center_horizontal"
        android:id="@+id/layoutiniciar">
        <TextView
            android:text="Iniciar Atendimento"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize = "70px"
            android:gravity = "center"
            android:textColor = "@android:color/white"
            android:id="@+id/textView1" 
        />
    </LinearLayout>
    <Spinner
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:id="@+id/spinner2" />

    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="32.5dp"
        android:hint="Região da Ferida"
        android:textColorHint="@android:color/black"
        android:gravity="center"
        android:background="#1E90FF"
        android:layout_margin="15px"
        android:id="@+id/edt_regiaoferida_atendimento" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="69.0dp"
        android:background="#1E90FF"
        android:hint="Descrição Ferida"
        android:textColorHint="@android:color/black"
        android:gravity="center"
        android:layout_margin="15px"
        android:id="@+id/edt_descricaoferida_iniciar" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="69.0dp"
        android:background="#1E90FF"
        android:hint="Cobertura Utilizada"
        android:textColorHint="@android:color/black"
        android:layout_margin="15px"
        android:gravity="center"
        android:id="@+id/edt_cobertura_atendimento" />

    <Spinner
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:id="@+id/spn_tipodaferida_atendimento" />
   

    <Button
        android:text="Tirar Foto"
        android:textColor = "@android:color/white"
        android:layout_width="348.0dp"
        android:layout_height="44.3dp"
        android:layout_margin = "10px"
        android:id="@+id/btn_tirarfoto_atendimento"
        android:backgroundTint="#fff28f18"
        android:textStyle="bold" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center">
        <Button
            android:text="Finalizar"
            android:textColor = "@android:color/white"
            android:layout_width="217.0dp"
            android:layout_height="62.5dp"
            android:layout_margin = "10px"
            android:id="@+id/btn_finalizar_atendimento"
            android:backgroundTint="#fff28f18"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
