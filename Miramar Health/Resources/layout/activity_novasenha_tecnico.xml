<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#3A5FCD">

    <ImageView
        android:src="@drawable/icone"
        android:layout_width="match_parent"
        android:layout_height="153.0dp"
        android:layout_marginBottom="80.0dp"
        android:id="@+id/imageView1" />

     <EditText
        android:inputType="textPassword"
        android:layout_width="261.0dp"
        android:layout_height="39.5dp"
        android:textColor = "#000"
        android:hint = "Digitie uma nova Senha"
        android:textSize ="30px"
        android:background = "#8DB6CD"
        android:textColorHint = "@android:color/black"
        android:id="@+id/edt_senha_novasenha"
        android:layout_margin = "10px"
        android:textAlignment = "center"
        android:layout_marginLeft="0.0dp"
        android:layout_gravity = "center_horizontal"
    />
         <EditText
        android:inputType="textPassword"
        android:layout_width="261.0dp"
        android:layout_height="39.5dp"
        android:textColor = "#000"
        android:hint = "Confirmar Nova Senha"
        android:textSize ="30px"
        android:background = "#8DB6CD"
        android:textColorHint = "@android:color/black"
        android:id="@+id/edt_confirmar_novasenha"
        android:layout_margin = "10px"
        android:textAlignment = "center"
        android:layout_marginLeft="0.0dp"
        android:layout_gravity = "center_horizontal"
    />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center">
        <Button
            android:text="alterar"
            android:textColor = "@android:color/black"
            android:layout_width="266.5dp"
            android:layout_height="wrap_content"
            android:layout_margin = "10px"
            android:id="@+id/btn_alterar_novasenha"
            android:backgroundTint="#fff28f18"
            />

         <Button
            android:text="voltar"
            android:textColor = "@android:color/black"
            android:layout_width="266.5dp"
            android:layout_height="wrap_content"
            android:layout_margin = "10px"
            android:id="@+id/btn_voltar_novasenha"
            android:backgroundTint="#fff28f18"
            />

    </LinearLayout>

</LinearLayout>
